<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_deadline_sell_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/color_f7f9fd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/color_19000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/analysis_circler_view"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/ll_main_analysis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:background="@drawable/circular_background_graph">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_analysis_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:text="2019년 23주차 리포트"
                    android:textSize="15dp"
                    android:textColor="@color/color_222222"
                    android:fontFamily="@font/notosans_regular"/>

                <TextView
                    android:id="@+id/tv_main_analysis_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingBottom="17.5dp"
                    android:text="2019.06.03~2019.06.09"
                    android:textSize="13dp"
                    android:textColor="@color/color_707594"
                    android:fontFamily="@font/notosans_regular"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_analysis"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>