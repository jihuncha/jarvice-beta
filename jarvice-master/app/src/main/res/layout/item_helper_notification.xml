<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main_helper_notification_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="horizontal"
    android:background="@color/color_ffffff"
    android:descendantFocusability="beforeDescendants">

    <ImageView
        android:id="@+id/iv_main_helper_notification_color"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/circular_notification" />

    <EditText
        android:id="@+id/et_main_helper_notification_info"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="내용"
        android:textSize="15dp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/color_333333"
        android:lineSpacingExtra="7.5dp"
        android:gravity="left"
        android:maxLines="2"
        android:background="@null" />

    <RelativeLayout
        android:id="@+id/rv_main_helper_notification_settings"
        android:layout_width="20dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_main_helper_notification_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:src="@drawable/notification_settings"/>

    </RelativeLayout>


</LinearLayout>